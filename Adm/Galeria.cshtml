@{
    Page.Title = "Albuns";


    var db = Database.Open("ConexaoLocal");

    var selecao = "SELECT ID, DESCRICAO, CAPA FROM Album";

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:slategray">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-camera" aria-hidden="true"></span>  JDGaleria </a>
                <a class="navbar-brand" href="~/Adm/Default.cshtml">| Logar</a>
            </div>
        </div>
    </nav>




    <div class="container">
        <div class="jumbotron">
            <h1>Nossa Galeria</h1>
            <hr>
            <p>
                Aqui esta todas as nossas galerias.
            </p>
        </div>
    </div>
    <div class="container">
        <div class="page-header">
            <h2 style="color:white">Guarde os Melhores Momentos</h2>
        </div>
    </div>
    <div>
        <div class="container">
            @foreach (var linha in db.Query(selecao))
            {
                if (linha.CAPA != null)
                {

                    
                        <div class="col-sm-6 col-md-3">
                            <div class="thumbnail">
                                <img src="@Href("~/Arquivos/","mini_" + linha.CAPA)" ;">

                                <div class="caption">
                                    <h3>Festa</h3>
                                    <p>
                                        @linha.DESCRICAO
                                    </p>
                                    <p><a href="#" class="btn btn-primary" role="button">Visualizar</a></p>
                                </div>
                            </div>
                        </div>
                    
                }
            }
        </div>
    </div>




            <footer class="page-footer font-small unique-color-dark pt-4" style="background-color:white">

                <div class="container">
                    <ul class="list-unstyled list-inline text-center py-2">
                        <li>
                            <h5>Sistemas de Informação Unimep</h5>
                            <hr class="unique-color-dark pt-4">© 2018 Copyright:
                            <a href="https://mdbootstrap.com/education/bootstrap/"></a>
                        </li>
                    </ul>
                </div>
            </footer>
</body>
</html>
    
